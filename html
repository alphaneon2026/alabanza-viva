    <h1 id="titulo">¬øQui√©n eres?</h1>
  </div>
  <div id="ingresarDatos">
    <input id="youname" type="text" placeholder="Ingrese su Nombre"/>
    <select id="usuario">
      <option value="not">Seleccione su Usuario</option>
      <option value="0">E60-20-62-82-32-53</option>
      <option value="1">A22-32-53</option>
    </select>
    <input type="password" id="codigo" placeholder="Ingrese su C√≥digo"/>
  </div>
  <br/>
  <button id="BT" onclick="Confirmar()">Verificar</button>
</div>

<script>
const user = document.getElementById('usuario');
const CODIGO = ["130204", "520726"];
const Nombre = ["Emanuel", "Abel"];
const inputNombre = document.getElementById('youname');
const inputCoder = document.getElementById('codigo'); 
const boton = document.getElementById('BT');
let evento = false;

setInterval(act, 100);

function act() {
  if (evento) {
    window.location.href = "Base-Datos/Phone.html"; 
  }
}

function Confirmar() {
  const tipouser = user.value;
  const nombreIngresado = inputNombre.value.trim();
  const codigoIngresado = inputCoder.value.trim();

  if (tipouser === "not") {
    alert("‚ö†Ô∏è Seleccione un usuario v√°lido");
    return;
  }

  if (nombreIngresado === Nombre[tipouser] && codigoIngresado === CODIGO[tipouser]) {
    inputNombre.value = "";
    inputCoder.value = "";
    inputNombre.placeholder = "Usuario encontrado ‚úÖ";
    inputCoder.placeholder = "C√≥digo correcto ‚úÖ";
    boton.classList.add("correcto");
    setTimeout(() => { evento = true; }, 2000);
  } else {
    boton.classList.add("error");
    inputNombre.value = "";
    inputCoder.value = "";
    inputNombre.placeholder = "Usuario o c√≥digo incorrecto ‚ùå";
    inputCoder.placeholder = "Intente nuevamente ‚ùå";
    setTimeout(() => { boton.classList.remove("error"); }, 1500);
  }
}
</script>
